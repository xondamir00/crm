generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}

model User {
  id               String   @id @default(cuid())
  fullName         String
  phone            String   @unique
  passwordHash     String
  role             Role     @default(STUDENT)
  isActive         Boolean  @default(true)
  refreshTokenHash String?
  createdAt        DateTime @default(now())

  @@index([role])
  @@index([isActive])
}